<div class='container-fluid  p-5'>
  <div class='row mt-5'>
    <h1 class="text-success">Your search result</h1>
    {{#each search}}
    <div class='col-12 col-md-6'>
      <div class='card border-0  shadow p-3 my-2 bg-body rounded'>
        <div class=' d-flex justify-content-between align-items-center'>
          <h1 class='card-title'>
            {{this.name}}
          </h1>
          <h4>
            {{this.brand}}
          </h4>
        </div>
        <a href="/product-spec/{{this._id}}">
          <img src="data:{{this.image.0.contentType}};base64,{{this.image.0.image}}" alt=''
            class='card-img-top  img-fluid' />
        </a>


        <div class='card-body d-flex justify-content-between align-items-center'>
          <button onclick="addToCart('{{this._id}}')" class="btn text-white fw-bold"
            style='background-color: #571d65;'>Add to cart</button>
          <h4>
            {{this.price}}
          </h4>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>